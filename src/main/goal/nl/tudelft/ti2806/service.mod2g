use serviceKnowledge as knowledge.
use serviceBeliefs as beliefs.
use serviceGoals as goals.
use service as actionspec.

use demolish as module.
use buildConvenienceStore as module.
use buildSportsCentre as module.

exit=never.

%main as main module
module main{
	if goal(buildStore) then buildConvenienceStore.
	if goal(buildSportsCentre) then buildSportsCentre.
	if goal(demolishBuilding(ID)) then demolish(ID).
}

